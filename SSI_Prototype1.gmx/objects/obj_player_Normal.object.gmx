        if(!bellyFull)
        {
            if(xprevious != x)
            {
                sprite_index = spr_Salt_Andando;
                image_speed = 0.1;  
            }
            else
            {
                sprite_index = spr_Salt_Parado;
            }
        }
        else
        {
            if(xprevious != x)
            {
                sprite_index = spr_Salt_G_Andando;
                image_speed = 0.1;  
            }
            else
            {
                sprite_index = spr_Salt_G_Parado;
            }
        }
    }
}
// Controlar a direção que o personagem está virado

if(xprevious &lt; x)
{
    image_xscale=1;  
} 
else if(xprevious &gt; x)
{
    image_xscale=-1;
}
